<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="dev.psuchanek.jonsfueltracker_v_1_1.ui.history.HistoryViewModel" />

        <import type="android.view.View" />

        <variable
            name="trip"
            type="dev.psuchanek.jonsfueltracker_v_1_1.models.FuelTrackerTrip" />


    </data>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/itemCardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/tripItemMainLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="@dimen/cardview_padding">

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/tvStationName"
                    style="@style/MainValuesDisplayed"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:text="@{trip.gasStationName}"
                    app:layout_constraintEnd_toStartOf="@+id/itemGuideline"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:hint="123" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/tvPriceItem"
                    style="@style/MainValuesDisplayed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:text="@{trip.fillUpCost}"
                    app:layout_constraintBottom_toBottomOf="@+id/tvStationName"
                    app:layout_constraintEnd_toStartOf="@+id/ivArrow"
                    app:layout_constraintTop_toTopOf="@+id/tvStationName"
                    tools:hint="$232" />

                <ImageView
                    android:id="@+id/ivArrow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:src="@drawable/ic_arrow_down"
                    app:layout_constraintBottom_toBottomOf="@id/tvIsSynced"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/tvStationName" />


                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/itemGuideline"
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    app:layout_constraintGuide_percent="0.75" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/tvDateItem"
                    style="@style/LabelsStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="@{trip.date}"
                    app:layout_constraintBottom_toBottomOf="@+id/tvVehicleNameItem"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tvStationName"
                    tools:hint="00-00-0000" />


                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/tvVehicleNameItem"
                    style="@style/LabelsStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:text="@{trip.vehicleName}"
                    app:layout_constraintStart_toEndOf="@+id/tvDateItem"
                    app:layout_constraintTop_toTopOf="@+id/tvDateItem"
                    tools:hint="Mercedes" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:src="@{trip.synced ? @drawable/ic_synced : @drawable/ic_unsynced}"
                    app:layout_constraintBottom_toBottomOf="@+id/tvIsSynced"
                    app:layout_constraintEnd_toStartOf="@+id/tvIsSynced"
                    app:layout_constraintTop_toTopOf="@+id/tvIsSynced" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/tvIsSynced"
                    style="@style/LabelsStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:text="@{trip.sync}"
                    app:layout_constraintBottom_toBottomOf="@id/tvDateItem"
                    app:layout_constraintEnd_toEndOf="@+id/tvPriceItem"
                    tools:hint="Synced" />


            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/expandableItemLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@color/grey"
                android:padding="8dp"
                android:visibility="@{trip.expanded ? View.VISIBLE : View.GONE}">

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/tvTripDistance"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:hint="123"
                    android:text="@{trip.lastTripDistance}"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/tvMPG"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:hint="123"
                    android:text="@{trip.milesPerGallon}"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/tvTripDistance"
                    app:layout_constraintTop_toTopOf="@+id/tvTripDistance" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/tvLitres"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:hint="123"
                    android:text="@{trip.litres}"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tvTripDistance" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/tvPPL"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:hint="123"
                    android:text="@{trip.ppl}"
                    app:layout_constraintStart_toStartOf="@+id/tvMPG"
                    app:layout_constraintTop_toTopOf="@+id/tvLitres" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>
</layout>