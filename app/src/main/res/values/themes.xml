<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.JonsFuelTracker_v_1_1" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="LabelsStyle" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textColor">?attr/colorOnSecondary</item>
    </style>

    <style name="MainValuesDisplayed" parent="TextAppearance.MaterialComponents.Headline6"/>

    <style name="LineChartButtons" parent="TextAppearance.MaterialComponents.Button">
        <item name="android:minWidth">32dp</item>
        <item name="android:minHeight">40dp</item>
        <item name="android:textColor">@color/grey</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="Labels" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="InfoDataStyle" parent="TextAppearance.MaterialComponents.Caption">
    <item name="android:textStyle">bold</item>
</style>



</resources>